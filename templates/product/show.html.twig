{% extends 'base.html.twig' %}

{% block title %}Product: {{ product.name }}{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-5 text-sidebar">{{ product.name }}</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded-md mb-4 border border-green-300">{{ message }}</div>
    {% endfor %}

    <table class="w-full border-collapse bg-white rounded-lg overflow-hidden shadow-sm my-4">
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">ID</th>
            <td class="px-4 py-3 bg-white">{{ product.id }}</td>
        </tr>
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">Name</th>
            <td class="px-4 py-3 bg-white">{{ product.name }}</td>
        </tr>
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">Description</th>
            <td class="px-4 py-3 bg-white">{{ product.description ?? '—' }}</td>
        </tr>
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">Category</th>
            <td class="px-4 py-3 bg-white">
                {% if product.category %}
                    <a href="{{ path('category_show', {id: product.category.id}) }}">{{ product.category.name }}</a>
                {% else %}
                    —
                {% endif %}
            </td>
        </tr>
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">Price</th>
            <td class="px-4 py-3 bg-white">${{ product.price }}</td>
        </tr>
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">Stock</th>
            <td class="px-4 py-3 bg-white">{{ product.stock }}</td>
        </tr>
    </table>

    <div class="my-5 flex gap-2 items-center">
        <a href="{{ path('product_edit', {id: product.id}) }}" class="btn">Edit</a>
        <a href="{{ path('product_index') }}" class="btn btn-secondary">Back to list</a>
        <form method="post" action="{{ path('product_delete', {id: product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');" class="inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
