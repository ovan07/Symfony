{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}

    <div class="actions">
        <a href="{{ path('category_new') }}" class="btn">+ New Category</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Products</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.products|length }}</td>
                    <td>
                        <a href="{{ path('category_show', {id: category.id}) }}" class="btn">Show</a>
                        <a href="{{ path('category_edit', {id: category.id}) }}" class="btn btn-secondary">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="empty">No categories found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
