{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-5 text-sidebar">Categories</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded-md mb-4 border border-green-300">{{ message }}</div>
    {% endfor %}

    <div class="my-5 flex gap-2 items-center">
        <a href="{{ path('category_new') }}" class="btn">+ New Category</a>
    </div>

    <table class="w-full border-collapse bg-white rounded-lg overflow-hidden shadow-sm my-4">
        <thead>
            <tr>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">ID</th>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">Name</th>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">Products</th>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr class="border-b border-gray-200 last:border-b-0 hover:bg-blue-50/50">
                    <td class="px-4 py-3">{{ category.id }}</td>
                    <td class="px-4 py-3">{{ category.name }}</td>
                    <td class="px-4 py-3">{{ category.products|length }}</td>
                    <td class="px-4 py-3">
                        <a href="{{ path('category_show', {id: category.id}) }}" class="btn">Show</a>
                        <a href="{{ path('category_edit', {id: category.id}) }}" class="btn btn-secondary">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-4 py-3 text-gray-400 italic">No categories found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
