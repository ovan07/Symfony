{% extends 'base.html.twig' %}

{% block title %}Category: {{ category.name }}{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-5 text-sidebar">{{ category.name }}</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded-md mb-4 border border-green-300">{{ message }}</div>
    {% endfor %}

    <table class="w-full border-collapse bg-white rounded-lg overflow-hidden shadow-sm my-4">
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">ID</th>
            <td class="px-4 py-3 bg-white">{{ category.id }}</td>
        </tr>
        <tr>
            <th class="px-4 py-3 text-left bg-gray-100 text-gray-800 w-[150px] font-semibold text-sm">Name</th>
            <td class="px-4 py-3 bg-white">{{ category.name }}</td>
        </tr>
    </table>

    <h2 class="text-xl font-bold mt-6 mb-3 text-sidebar">Products in this category</h2>

    <table class="w-full border-collapse bg-white rounded-lg overflow-hidden shadow-sm my-4">
        <thead>
            <tr>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">ID</th>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">Name</th>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">Price</th>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">Stock</th>
                <th class="px-4 py-3 text-left bg-sidebar text-white font-semibold text-xs uppercase tracking-wide">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in category.products %}
                <tr class="border-b border-gray-200 last:border-b-0 hover:bg-blue-50/50">
                    <td class="px-4 py-3">{{ product.id }}</td>
                    <td class="px-4 py-3">{{ product.name }}</td>
                    <td class="px-4 py-3">${{ product.price }}</td>
                    <td class="px-4 py-3">{{ product.stock }}</td>
                    <td class="px-4 py-3">
                        <a href="{{ path('product_show', {id: product.id}) }}" class="btn">Show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-4 py-3 text-gray-400 italic">No products in this category.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="my-5 flex gap-2 items-center">
        <a href="{{ path('category_edit', {id: category.id}) }}" class="btn">Edit</a>
        <a href="{{ path('category_index') }}" class="btn btn-secondary">Back to list</a>
        <form method="post" action="{{ path('category_delete', {id: category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');" class="inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
