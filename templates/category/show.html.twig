{% extends 'base.html.twig' %}

{% block title %}Category: {{ category.name }}{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}

    <table class="detail">
        <tr>
            <th>ID</th>
            <td>{{ category.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
    </table>

    <h2>Products in this category</h2>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in category.products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>${{ product.price }}</td>
                    <td>{{ product.stock }}</td>
                    <td>
                        <a href="{{ path('product_show', {id: product.id}) }}" class="btn">Show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="empty">No products in this category.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="actions">
        <a href="{{ path('category_edit', {id: category.id}) }}" class="btn">Edit</a>
        <a href="{{ path('category_index') }}" class="btn btn-secondary">Back to list</a>
        <form method="post" action="{{ path('category_delete', {id: category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this category?');" style="display:inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
{% endblock %}
